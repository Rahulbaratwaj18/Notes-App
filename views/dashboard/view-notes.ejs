<div class="container-fluid container-fluid mb-5 pb-4">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Note</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= note.title %>
          </li>
        </ol>

        <div class="col d-flex justify-content-between align-items-center">
          <h3>View Notes</h3>

          <button
            type="button"
            class="btn btn-danger d-flex"
            data-bs-toggle="modal"
            data-bs-target="#deleteModal"
          >
            Delete
          </button>
        </div>
      </nav>
    </div>
  </div>

  <form
    action="/dashboard/item/<%= note.id %>"
    method="POST"
    class="position-relative"
  >
    <div
      class="postion-absolute form-group mb-4"
      style="left: 1px; top: 1px; right: 1px"
    >
      <input
        type="text"
        id="title"
        class="form-control border-0 fw-bold fs-4"
        name="title"
        value="<%= note.title %>"
        placeholder="Title.."
      />
    </div>

    <div class="form-group mb-5">
      <textarea class="form-control pt-5 fs-3" row="12" id="body" name="body">
<%= note.body %></textarea
      >
    </div>

    <div class="form-group mb-5">
      <button type="submit " class="btn btn-primary">Update</button>
    </div>
  </form>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a note</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          This will delete your note <b class="fw-bold"><%= note.title %></b
          ><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>

        <form
          action="/dashboard/item-delete/<%= noteID %>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-primary">Delete Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
