<div class="container-fluid conatiner-fluid-custom pb-5 mb-5">
  <div class="row mb-5">
    <div class="col">
      <h1>Hey <%= userName %> !!</h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary  ">+ New  Note </a>
    </div>
  </div>

  <div class="row">
   
    <% if(notes.length > 0 ) { %>
        <% notes.forEach((note) => { %>
        <div class="col-sm-3">
          <div class="card border-primary mb-5 d-grid g-2">
           <a href="/dashboard/item/<%= note._id %>" class="card-body text-decoration-none">
            <h5 class="card-title"><%= note.title %></h5>
            <p class="card-body jusitfy-content-left"><%= note.body %></p>
           </a>

          </div>
        </div>

       <% }) %>
    
    <% } else { %>
    
       <div class="col-sm-3">
        <img src="img/human-3.svg" alt="Human pointing" class="human-3">
        
       </div>
       <div class="col-sm-3">
        <h2 class="mb-5 mt-4">Lets create a new note..</h2>
        <a href="/dashboard/add" class="text-decoration-none mt-5">Create one </a>
       </div>

    <% } %>


    <% if(notes.length > 0) { var current; var pages%>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-5">
          <% if( current == 1) { %>
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
          <% }  %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1 ) { %>
            <li class="page-item"><a class="page-link" href="#">...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current ) { %>
              <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if(i == Number(current) + 4 && i < pages) { %>
              <li class="page-item"><a class="page-link" href="#">...</a></li>
            <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="page-item disabled"><a class="page-link">Last</a></li>
          <% } else { %>
              <li class="page-item"><a href="/dashboard/?page=<%= pages %>" class="page-link">Last</a></li>
          <% } %>
        </ul>
      </nav>
  
    <% } %>


  </div>
</div>
